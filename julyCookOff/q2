#include<bits/stdc++.h>
#define ll long long int 
#define fio ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL)
using namespace std;

void solve(){
  ll x,y,z;
  cin>>x>>y>>z;

  if(x<=y)cout<<z<<endl;
  else{
  	ll w=(ll)ceil((double)x/y);
  	cout<<w*z<<endl;
  }

}

int main(){
    ll t;
  cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
