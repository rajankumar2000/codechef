#include<bits/stdc++.h>
#define ll long long int 
#define fio ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL)
using namespace std;

void solve(){
 ll x1,y1,x2,y2;
 cin>>x1>>y1>>x2>>y2;

 if(x1+y1>x2+y2)cout<<x2+y2<<endl;
 else{
 	cout<<x1+y1<<endl;
 }
}

int main(){
    ll t;
  cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
